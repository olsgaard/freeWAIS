#include "config.h"

            SHELL = /bin/sh

Initialize(REGEXPDIR,$regexpdir)
Initialize(CTYPEDIR,$ctypedir)
Initialize(TESTDIR,$testdir)

#ifdef HAVE_ATHENA
             XDIR = x
#endif

#define CTYPE
          SUBDIRS =  $(CTYPEDIR) $(REGEXPDIR) \
                     lib ir ui bin doc/original-TM-wais/manl $(XDIR) $(TESTDIR)

all::		/* So that default target is not clobber! */

SetSubdirs($(SUBDIRS))
DependDirs($(SUBDIRS))
AddedByConfigure(install mkdep)

Initialize(AWK,$awk)
TAGS:	MANIFEST
	etags --defines `$(AWK) '{print $$1}' MANIFEST | grep -v '_[ly].c$$'`

local_clean::
	$(RM) TAGS

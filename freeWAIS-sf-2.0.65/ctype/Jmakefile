#include "../config.h"

             SRCS = ctest.c mkctype.c

all:: ctype.o

test: ctest
	./ctest

NormalProgramTarget(mkctype,mkctype.c,mkctype.o)
NormalProgramTarget(ctest,ctest.c ctype.c, ctest.o ctype.o)

includes:: ctype.c

ctype.c: mkctype ctype.tmpl
	./mkctype > ctype.c
	cat ctype.tmpl >> ctype.c

local_realclean::
	$(RM) ctype.c

DependTarget()
